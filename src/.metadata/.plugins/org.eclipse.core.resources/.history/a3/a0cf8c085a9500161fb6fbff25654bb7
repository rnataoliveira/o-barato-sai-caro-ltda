package oBaratoSaiCaroLtda;

import java.util.Random;

public class Caixa {
	Cliente filaFila[] = new Cliente[120];
	int hora;
	int minutos;
	int tamanhoDaFila = 0;
	int caixa = 1;
	int menosQueDez = 0;

	public void Fila() {
		Random gerador = new Random();
		Fila fila = new Fila();
		for (hora = 8; hora < 22; hora++) {
			for (minutos = 0; minutos < 60; minutos++) {
				if (hora == 8 || hora == 9) {
					if (gerador.nextFloat() > 0.30) {
						Cliente cliente = new Cliente();
						// arrumar a linha abaixo da criação do cliente de todos
						// os if's para colocalos na estrutura de "fila".
						filaFila[tamanhoDaFila] = cliente;
						tamanhoDaFila++;
					}
					Cliente cliente = fila.filaFila[0];
					if (caixa == 1 && cliente.quantidade() > 10 && fila.tamanhoDaFila > 0) {
						caixa++;
						hora--;
					} else {
						menosQueDez++;
					}
				}
			}
			System.out.println("Hora do teste: " +hora+ " horas. ");
			System.out.println("Para essa hora são necessarios " +caixa+ " caixas. ");
		}
	}
}